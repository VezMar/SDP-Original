<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:weightSum="3"
    card_view:cardCornerRadius="4dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtview_actividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/text_actividad"
                android:textAllCaps="true"
                android:textColor="#504e4e"
                android:textSize="18dp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                    android:id="@+id/txtview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre de evento"
                    android:textAllCaps="true"
                    android:textColor="#4e4c4c"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <!--TextView
                android:id="@+id/txtview_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_uid"
                android:textSize="15sp"
                android:textStyle="italic" /-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio: "
                android:paddingStart="15dp"
                android:textSize="13dp"

                android:textColor="#6b6b6b"/>
            <TextView
                android:id="@+id/txtview_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha inicial"
                android:textSize="13dp"
                android:textColor="#6b6b6b"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Termina: "
                android:paddingStart="15dp"
                android:textSize="13dp"
                android:textColor="#6b6b6b" />
            <TextView
                android:id="@+id/txtview_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha final"
                android:textSize="13dp"
                android:textColor="#6b6b6b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiempo Restante:"
                android:paddingStart="15dp"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/txtHrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 75 h 35 m"
                android:textSize="13dp"
                android:layout_marginLeft="130dp"
                android:layout_gravity="right"/>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>