<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clases.Prueba.fragmentosEvidence.ArchivosFragment">

    <LinearLayout
        android:id="@+id/ln2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Inicio de la tarea"
            android:textColor="@android:color/black"
            android:textSize="26dp"
            android:textStyle="bold" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ln2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/ln1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/archivos_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3b9c9999"/>
        </LinearLayout>
    </RelativeLayout>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_action_2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_delete_black_24dp"
        fab:fab_colorNormal="#c71d0d"
        fab:fab_colorPressed="#ff1600"
        app:fab_size="normal"
        app:fab_label="Borrar Seleccionados"
        android:layout_marginBottom="80dp"
        />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/FloatingActionMenuPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        fab:menu_colorNormal="@color/colorPrimary"
        fab:menu_colorPressed="@color/colorPrimaryDark"
        app:fab_addButtonPlusIconColor="#FFFFFFFF"
        app:fab_labelStyle="@style/customfab"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#4d000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_animationDelayPerItem="50"
        android:overScrollMode="always"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_action_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_picture_as_pdf_black_24dp"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white_pressed"
            app:fab_size="mini"
            app:fab_label="Subir PDF"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_action_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_insert_drive_file_black_24dp"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white_pressed"
            app:fab_size="mini"
            app:fab_label="Subir Docx"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_action_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_video_call_black_24dp"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white_pressed"
            app:fab_size="mini"
            app:fab_label="Subir Video"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_action_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_voice_black_24dp"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white_pressed"
            app:fab_size="mini"
            app:fab_label="Subir Audio"
            />

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>