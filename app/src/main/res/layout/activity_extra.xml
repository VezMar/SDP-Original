<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clases.ExtraActivity">


    <RelativeLayout
        android:id="@+id/content_supervision"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">


        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Nombre: "
            android:textSize="26dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtidevent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:textColor="#333"
            android:textSize="18dp"
            android:text="ID del evento: "/>
        <!--ImageView
            android:id="@+id/imgView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignStart="@+id/txtEstado"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-6dp"
            android:layout_marginTop="51dp"
            android:scaleType="centerCrop"
            android:visibility="invisible" /-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="426dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="85dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edObserv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="top|left"
                        android:hint="Descripcion"
                        android:inputType="textMultiLine"
                        android:lines="6"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:scrollHorizontally="false"
                        android:textColorHint="@android:color/darker_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ru.dimorinny.floatingtextbutton.FloatingTextButton
                        android:id="@+id/btnFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        app:floating_background_color="@color/colorPrimary"
                        app:floating_left_icon="@drawable/ic_add_a_photo_black_24dp"
                        app:floating_title="Añadir"
                        app:floating_title_color="@android:color/white" />


                    <ru.dimorinny.floatingtextbutton.FloatingTextButton
                        android:id="@+id/btnBorrar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        app:floating_background_color="#be4747"
                        app:floating_left_icon="@drawable/ic_delete_black_24dp"
                        app:floating_title="Borrar"
                        app:floating_title_color="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Lfotos1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                            android:id="@+id/imgView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/empty_image"
                            app:bootstrapBrand="primary"
                            app:hasBorder="false" />

                        <CheckBox
                            android:id="@+id/Check1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/imgView"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="-10dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                            android:id="@+id/imgView2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/empty_image"
                            app:bootstrapBrand="primary"
                            app:hasBorder="false" />

                        <CheckBox
                            android:id="@+id/Check2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/imgView2"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="-10dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                            android:id="@+id/imgView3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/empty_image"
                            app:bootstrapBrand="primary"
                            app:hasBorder="false" />

                        <CheckBox
                            android:id="@+id/Check3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/imgView3"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="-10dp" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Lfotos2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                            android:id="@+id/imgView4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/empty_image"
                            app:bootstrapBrand="primary"
                            app:hasBorder="false" />

                        <CheckBox
                            android:id="@+id/Check4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/imgView4"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="-10dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                            android:id="@+id/imgView5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/empty_image"
                            app:bootstrapBrand="primary"
                            app:hasBorder="false" />

                        <CheckBox
                            android:id="@+id/Check5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/imgView5"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="-10dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                            android:id="@+id/imgView6"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/empty_image"
                            app:bootstrapBrand="primary"
                            app:hasBorder="false" />

                        <CheckBox
                            android:id="@+id/Check6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/imgView6"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="-10dp" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ru.dimorinny.floatingtextbutton.FloatingTextButton
                        android:id="@+id/btnArchivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Archivo"
                        app:floating_background_color="#898987"
                        app:floating_left_icon="@drawable/ic_insert_drive_file_black_24dp"
                        app:floating_title="Archivo"
                        app:floating_title_color="@android:color/white" />

                    <ru.dimorinny.floatingtextbutton.FloatingTextButton
                        android:id="@+id/btnBorrarArchivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/edObserv"
                        app:floating_background_color="#c71d0d"
                        app:floating_left_icon="@drawable/ic_delete_black_24dp"
                        app:floating_title_color="@android:color/white" />

                    <ru.dimorinny.floatingtextbutton.FloatingTextButton
                        android:id="@+id/btnEnviar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:layout_toEndOf="@+id/edObserv"
                        app:floating_background_color="#1c8915"
                        app:floating_left_icon="@drawable/ic_file_upload_black_24dp"
                        app:floating_title="Enviar"
                        app:floating_title_color="@android:color/white" />
                </LinearLayout>


            </LinearLayout>


        </ScrollView>





        <!--ImageView
            android:id="@+id/imgView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignStart="@+id/txtEstado"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-6dp"
