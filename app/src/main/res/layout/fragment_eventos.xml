<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Content_Eventos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.EventosFragment"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subproyecto: "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/txt_SubProyecto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SubProyectos"
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actividad: "
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/txtAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seleccione una Actividad"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_below="@id/txt_SubProyecto"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

        <TextView
            android:id="@+id/txtEventosPendientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:text="Tienes # Eventos pendientes" />

            <!--<CheckBox-->
                <!--android:id="@+id/checkbox_Order"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Recientes"-->
                <!--android:layout_gravity="right"-->
                <!--android:layout_marginLeft="20dp"/>-->

        </LinearLayout>
        <!--<Spinner-->
            <!--android:id="@+id/SpnProyectos"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

        <!--</Spinner>-->
        <!--<Spinner-->
            <!--android:id="@+id/SpnSubProyectos"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
        <!--</Spinner>-->

        <!--<Spinner-->
            <!--android:id="@+id/SpnActividades"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
        <!--</Spinner>-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_action_extraordinary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_report_black_24dp"
        fab:fab_colorNormal="#E41A0C"
        fab:fab_colorPressed="#ff1600"
        app:fab_size="normal"
        app:fab_label="Borrar Seleccionados"
        android:layout_marginBottom="10dp"
        android:overScrollMode="always"
        />



</RelativeLayout>