<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_supervision"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
   <RelativeLayout
        android:id="@+id/content_supervision"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




           <com.github.clans.fab.FloatingActionButton
               android:id="@+id/fab_action_2_1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="140dp"
               android:layout_alignParentEnd="true"
               android:layout_alignParentBottom="true"
               android:layout_marginRight="8dp"
               android:src="@drawable/ic_delete_black_24dp"
               fab:fab_colorNormal="#c71d0d"
               fab:fab_colorPressed="#ff1600"
               app:fab_size="normal"
               app:fab_label="Borrar Seleccionados"


               />




       <com.github.clans.fab.FloatingActionMenu
           android:id="@+id/FloatingActionMenuPrincipal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_alignParentBottom="true"
           fab:menu_colorNormal="@color/colorPrimary"
           fab:menu_colorPressed="@color/colorPrimaryDark"
           app:fab_addButtonPlusIconColor="#FFFFFFFF"
           app:fab_labelStyle="@style/customfab"
           android:layout_marginBottom="60dp"
           app:menu_icon="@drawable/ic_camera_black_24dp"


           fab:menu_showShadow="true"
           fab:menu_shadowColor="#4d000000"
           fab:menu_shadowRadius="4dp"
           fab:menu_shadowXOffset="1dp"
           fab:menu_shadowYOffset="3dp"

           fab:menu_animationDelayPerItem="50"
           >

           <com.github.clans.fab.FloatingActionButton
               android:id="@+id/fab_action_1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_menu_camera"
               fab:fab_colorNormal="@color/white"
               fab:fab_colorPressed="@color/white_pressed"
               app:fab_size="mini"
               app:fab_label="Tomar Foto"
               />

           <com.github.clans.fab.FloatingActionButton
               android:id="@+id/fab_action_2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_videocam_black_24dp"
               fab:fab_colorNormal="@color/white"
               fab:fab_colorPressed="@color/white_pressed"
               app:fab_size="mini"
               app:fab_label="Tomar Video"/>

           <com.github.clans.fab.FloatingActionButton
               android:id="@+id/fab_action_3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_picture_as_pdf_black_24dp"
               fab:fab_colorNormal="@color/white"
               fab:fab_colorPressed="@color/white_pressed"
               app:fab_size="mini"
               app:fab_label="Subir PDF"
               />

           <com.github.clans.fab.FloatingActionButton
               android:id="@+id/fab_action_4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_insert_drive_file_black_24dp"
               fab:fab_colorNormal="@color/white"
               fab:fab_colorPressed="@color/white_pressed"
               app:fab_size="mini"
               app:fab_label="Subir Docx"
               />

           <com.github.clans.fab.FloatingActionButton
               android:id="@+id/fab_action_5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_video_call_black_24dp"
               fab:fab_colorNormal="@color/white"
               fab:fab_colorPressed="@color/white_pressed"
               app:fab_size="mini"
               app:fab_label="Subir Video"
               />

           <com.github.clans.fab.FloatingActionButton
               android:id="@+id/fab_action_6"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_keyboard_voice_black_24dp"
               fab:fab_colorNormal="@color/white"
               fab:fab_colorPressed="@color/white_pressed"
               app:fab_size="mini"
               app:fab_label="Subir Audio"
               />



       </com.github.clans.fab.FloatingActionMenu>



    </RelativeLayout>



    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main2"
        app:menu="@menu/activity_supervision_drawer"
        />

</android.support.v4.widget.DrawerLayout>
