<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clases.Prueba.fragmentosEvidence.MultimediaFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text=""
                android:textColor="@color/bootstrap_gray_dark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/check_NoAplica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No aplica"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/ln1"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/images_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_action_2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_delete_black_24dp"
        fab:fab_colorNormal="#c71d0d"
        fab:fab_colorPressed="#ff1600"
        app:fab_size="normal"
        app:fab_label="Borrar Seleccionados"
        android:layout_marginBottom="80dp"
        />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/FloatingActionMenuPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        fab:menu_colorNormal="@color/colorPrimary"
        fab:menu_colorPressed="@color/colorPrimaryDark"
        app:fab_addButtonPlusIconColor="#FFFFFFFF"
        app:fab_labelStyle="@style/customfab"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#4d000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_animationDelayPerItem="50"
        android:overScrollMode="always"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_action_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_camera"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white_pressed"
            app:fab_size="mini"
            app:fab_label="Tomar Foto"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_action_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_videocam_black_24dp"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white_pressed"
            app:fab_size="mini"
            app:fab_label="Tomar Video"/>

    </com.github.clans.fab.FloatingActionMenu>



</RelativeLayout>