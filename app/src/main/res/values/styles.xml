<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="dangerToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#ffffff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#ff0000</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#000000</item>
        <item name="stIconStart">@drawable/ic_warning_black_24dp</item>
        <item name="stIconEnd">@drawable/ic_warning_black_24dp</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">center</item> top or center
        <item name="stRadius">10dp</item>
    </style>

    <style name="warningToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#ffffff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#ffdc16</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#000000</item>
        <item name="stIconStart">@drawable/ic_error_outline_black_24dp</item>
        <item name="stIconEnd">@drawable/ic_error_outline_black_24dp</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">center</item> top or center
        <item name="stRadius">10dp</item>
    </style>

    <style name="sucessToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#ffffff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#00c8ff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#000000</item>
        <item name="stIconStart">@drawable/ic_check_circle_black_24dp</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">center</item> top or center
        <item name="stRadius">5dp</item>
    </style>

    <style name="doneToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#ffffff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#7fff5c</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#000000</item>
        <item name="stIconStart">@drawable/ic_check_circle_black_24dp</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">top</item> top or center
        <item name="stRadius">5dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
